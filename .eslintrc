{
  "parser": "babel-eslint",
  "plugins": ["react", "jest"],
//  "plugins": ["react", "jest", "prettier"], Remove prettier for now because its annoying me
  "extends": ["airbnb"],
//  "extends": ["airbnb", "plugin:prettier/recommended", "prettier/react"],
  "globals": {
    "React": true,
    "document": true,
    "window": true,
    "jQuery": true,
    "$": true,
    "localStorage": true,
    "fetch": true
  },
  "root": true,
  "rules": {
//    "indent": ["error", 2],

    // turn off a bunch of dumb rules that suck for development
    "no-unused-vars": "off",
    "class-methods-use-this": "off",
    "object-curly-newline": "off",
    "object-curly-spacing": "off",
    "lines-between-class-members": "off",
    "prefer-destructuring": "off",
    "react/destructuring-assignment": "off",
    "react/forbid-prop-types": "off",
    "react/no-array-index-key": "off",
    "react/no-unused-prop-types": "off",
    "implicit-arrow-linebreak": "off",
    "comma-dangle": "off",
    "function-paren-newline": "off",
    "spaced-comment": "off",
    "no-multiple-empty-lines": "off",
    "indent": "off",
    "quotes": "off",
    "react/jsx-curly-spacing": "off",
    "react/jsx-first-prop-new-line": "off",
    "no-console": "off",
    "padded-blocks": "off",
    "no-empty": "off",
    "react/jsx-one-expression-per-line": "off",
    "max-len": "off",
    "no-underscore-dangle": "off",
    "no-trailing-spaces": "off",
    "import/order": "off",
    "react/jsx-indent": "off",
    "eslint-disable-next-line no-throw-literal": "off",
    "no-debugger": "off",
    "no-throw-literal": "off",
    "arrow-body-style": "off",
    // disabled crap

    "react/prefer-stateless-function": "warn",
    "react/self-closing-comp": [
      "warn",
      {
        "component": true,
        "html": false
      }
    ],
//    "react/sort-comp": [ // this wants me to define my class properties after my lifecycle methods.  dumb
//      1,
//      {
//        "order": [
//          "static-methods",
//          "lifecycle",
//          "everything-else",
//          "rendering"
//        ],
//        "groups": {
//          "rendering": ["/^render.+$/", "render"]
//        }
//      }
//    ],
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "jest/prefer-to-have-length": "warn",
    "jest/valid-expect": "error",
    "react/require-default-props": 0,
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }],
    "react/jsx-boolean-value": ["warn", "never"],
    "react/jsx-closing-bracket-location": ["warn", "after-props"],
//    "react/jsx-curly-spacing": ["warn", "never"],
    "react/jsx-filename-extension": ["warn", { "extensions": [".jsx"] }],
//    "react/jsx-first-prop-new-line": ["warn", "multiline"],
    "react/jsx-handler-names": [
      "warn",
      {
        "eventHandlerPrefix": "handle",
        "eventHandlerPropPrefix": "on"
      }
    ],
//    "react/jsx-indent": ["warn", 2],
    "react/jsx-key": "error",
    "react/jsx-wrap-multilines": ["warn"],
    "react/jsx-indent-props": 0,
//    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "prefer-template": 0,
    "import/prefer-default-export": 0,
    "import/no-unresolved": 0,
    "import/no-extraneous-dependencies": 0,
    "import/extensions": 0,
    "babel/object-curly-spacing": 0
  },
  "env": {
    "es6": true,
    "jest": true,
    "browser": true,
    "node": true
  }
}
